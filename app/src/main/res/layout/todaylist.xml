<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#fcdd93">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/recyclerborder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/cilckImg"
                android:layout_width="27dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/open"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="금액￦"
                android:gravity="right"
                android:textSize="30dp"
                android:fontFamily="@font/dunggeunmo"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:padding="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/uesdPlaceTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="사용한 곳: "
                android:textSize="18dp"
                android:fontFamily="@font/dunggeunmo"
                android:textColor="@android:color/black"/>
            <EditText
                android:id="@+id/uesdPlace"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dunggeunmo"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:inputType="textNoSuggestions"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/usageTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="용     도: "
                android:textSize="18dp"
                android:fontFamily="@font/dunggeunmo"
                android:textColor="@android:color/black"/>
            <EditText
                android:id="@+id/usage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dunggeunmo"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:inputType="textNoSuggestions"/>
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="저장"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textStyle="bold"
                android:fontFamily="@font/dunggeunmo"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM 02:10"
            android:textSize="17dp"
            android:fontFamily="@font/dunggeunmo"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
